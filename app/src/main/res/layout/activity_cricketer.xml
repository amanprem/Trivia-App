<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".CricketerActivity">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:orientation="vertical"
       android:layout_weight="2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DispName"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Who is the best cricketer in the world?"
        android:textColor="@color/accent_material_light"
        tools:ignore="MissingConstraints" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answersonecricket"
        android:clickable="true"
        android:layout_centerVertical="true"
        tools:ignore="MissingConstraints">
        <!--android:layout-->
        <!--android:checkedButton="@+id/radioButton"-->


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A) Sachin Tendulkar"
            android:id="@+id/radioButton"
            android:checked="false"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B) Virat Kolli"
            android:id="@+id/radioButton2"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C) Adam Gilchirst"
            android:id="@+id/radioButton3"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D) Jacques Kallis"
            android:id="@+id/radioButton4"
            android:checked="false" />

    </RadioGroup>


       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btnnexttoindian"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="4dp"
           android:background="@drawable/bg_bottom_gradient"
           android:text="Next"
           android:layout_gravity="bottom|right"
           android:textColor="@color/black" />
   </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:background="@drawable/imgtwo"
        />



</LinearLayout>